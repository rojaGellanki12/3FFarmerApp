    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_l"
            android:layout_marginTop="18dp"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:id="@+id/back"/>

        <com.calibrage.a3ffarmerapp.Activities.CommonTextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="@string/labour"
            android:textStyle="bold"
            android:layout_marginStart="-10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:layout_below="@+id/linear1"
        android:id="@+id/relative1">

        <com.calibrage.a3ffarmerapp.Activities.CommonTextView
            android:id="@+id/plotIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:text="@string/age"
            android:textColor="@color/album_title"
            android:textSize="17sp" />
        <com.calibrage.a3ffarmerapp.Activities.CommonTextView
            android:id="@+id/plotId"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/plotIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:hint="25"
            android:textSize="17sp"
            />

        <com.calibrage.a3ffarmerapp.Activities.CommonTextView
            android:id="@+id/palmAreaLabel"

            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/village"
            android:textSize="17sp"
            android:layout_below="@id/plotId"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            android:textColor="@color/album_title"
           />
        <com.calibrage.a3ffarmerapp.Activities.CommonTextView
            android:id="@+id/palmArea"
            android:layout_toRightOf="@+id/palmAreaLabel"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Chinnakoduru"
            android:textSize="17sp"
            android:layout_below="@id/plotId"
            android:paddingLeft="@dimen/album_title_padding"
            android:paddingRight="@dimen/album_title_padding"
            android:paddingTop="@dimen/album_title_padding"
            />
    </RelativeLayout>
