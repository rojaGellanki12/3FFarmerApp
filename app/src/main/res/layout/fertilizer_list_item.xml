<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/margin_10"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10">

            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/plot_codeLabel"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:text="@string/plot_code"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/plot_code"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/plot_codeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:hint="@string/plot_code"
                android:textSize="@dimen/album_title" />

            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/ageLabel"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:layout_below="@id/plot_code"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/age"
                android:layout_toRightOf="@+id/ageLabel"
                android:layout_marginStart="53dp"
                android:layout_width="wrap_content"
                android:hint="@string/age"
                android:layout_height="wrap_content"
                android:layout_below="@id/plot_code"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />

            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/sizeLabel"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:layout_below="@id/age"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/size"
                android:layout_toRightOf="@+id/sizeLabel"
                android:layout_marginStart="53dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/size"
                android:layout_below="@id/age"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/villageLabel"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/village"
                android:layout_below="@id/size"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/village"
                android:layout_toRightOf="@+id/villageLabel"
                android:layout_marginStart="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/village"
                android:layout_below="@id/size"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/landmarkLabel"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landmark"
                android:layout_below="@id/village"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/landmark"
                android:layout_toRightOf="@+id/landmarkLabel"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/landmark"
                android:layout_below="@id/village"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/fertilizer1Label"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fertilizer1"
                android:layout_below="@id/landmark"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/fertilizer1"
                android:layout_toRightOf="@+id/fertilizer1Label"
                android:layout_marginStart="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/fertilizer1"
                android:layout_below="@id/landmark"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/fertilizer2Label"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fertilizer2"
                android:layout_below="@id/fertilizer1"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/fertilizer2"
                android:layout_toRightOf="@+id/fertilizer2Label"
                android:layout_marginStart="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/fertilizer2"
                android:layout_below="@id/fertilizer1"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/fertilizer3Label"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fertilizer3"
                android:layout_below="@id/fertilizer2"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            <com.calibrage.a3ffarmerapp.Activities.CommonTextView
                android:id="@+id/fertilizer3"
                android:layout_toRightOf="@+id/fertilizer2Label"
                android:layout_marginStart="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/fertilizer3"
                android:layout_below="@id/fertilizer2"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textSize="@dimen/album_title" />
